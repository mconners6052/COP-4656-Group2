<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/set_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desired Weight:" />

            <EditText
                android:id="@+id/weight_setting"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_row_1"
            android:layout_marginTop="@dimen/item_spacing"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/set_row_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desired Sets:" />

            <EditText
                android:id="@+id/sets_setting"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_row_2"
            android:layout_marginTop="@dimen/item_spacing"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/set_row_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desired Reps:" />

            <EditText
                android:id="@+id/reps_setting"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="number" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/set_row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_row_3"
            android:layout_marginTop="@dimen/item_spacing"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            app:layout_constraintTop_toBottomOf="@+id/set_row_3">

            <TextView
                android:id="@+id/isliked_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Use this Exercise" />

            <CheckBox
                android:id="@+id/isliked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/isliked_text" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Save" />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>