<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/exercise_btn_size"
        android:orientation="horizontal"
        android:id="@+id/exercise_container_header"
        tools:context=".ExerciseFragmentContainer">

        <!-- TODO: Update blank fragment layout -->
        <Button
            android:id="@+id/exercise_back_btn"
            android:layout_width="@dimen/exercise_btn_size"
            android:layout_height="@dimen/exercise_btn_size"
            android:background="@drawable/ic_ex_back_btn"
            android:gravity="start" />

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exercise_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="@string/hello_blank_fragment"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/exercise_head_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <Button
            android:id="@+id/exercise_fwd_btn"
            android:layout_width="@dimen/exercise_btn_size"
            android:layout_height="@dimen/exercise_btn_size"
            android:background="@drawable/ic_ex_fwd_btn"
            android:gravity="end"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/exercise_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/exercise_container_header"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"></FrameLayout>

</RelativeLayout>